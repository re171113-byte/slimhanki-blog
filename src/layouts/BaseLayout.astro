---
interface Props {
  title: string;
  description?: string;
  image?: string;
  // SEO 추가 props
  type?: 'website' | 'article';
  pubDate?: string;
  category?: string;
  tags?: string[];
  slug?: string;
}

const {
  title,
  description = "Cook What You Watch - Authentic Korean recipes from your favorite K-Dramas",
  image,
  type = 'website',
  pubDate,
  category,
  tags,
  slug
} = Astro.props;

const siteUrl = 'https://kdrama-kitchen.vercel.app';
const canonicalUrl = slug ? `${siteUrl}/posts/${slug}/` : new URL(Astro.url.pathname, siteUrl).href;
const ogImage = image || `${siteUrl}/og-default.jpg`;

// 현재 경로로 네비게이션 active 상태 결정
const currentPath = Astro.url.pathname;

// JSON-LD Schema
const jsonLd = type === 'article' ? {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": ogImage,
  "datePublished": pubDate,
  "dateModified": pubDate,
  "author": {
    "@type": "Person",
    "name": "K-Drama Kitchen",
    "url": `${siteUrl}/about`
  },
  "publisher": {
    "@type": "Organization",
    "name": "K-Drama Kitchen",
    "logo": {
      "@type": "ImageObject",
      "url": `${siteUrl}/logo.png`
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  },
  "keywords": tags?.join(', ')
} : {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "K-Drama Kitchen",
  "description": "Cook What You Watch - Authentic Korean recipes from your favorite K-Dramas",
  "url": siteUrl,
  "publisher": {
    "@type": "Organization",
    "name": "K-Drama Kitchen"
  }
};
