---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get posts from Content Collections
const allPosts = await getCollection('posts');
const posts = allPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .map(post => ({
    slug: post.slug,
    title: post.data.title,
    description: post.data.description,
    image: post.data.image + '?w=600',
    category: post.data.category,
    date: post.data.pubDate.replace(/-/g, '.')
  }));

// Featured posts: Latest 5
const recommendedPosts = posts.slice(0, 5);
---

<BaseLayout title="K-Drama Kitchen - Cook What You Watch">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-single">
      {posts[0] && (
        <a href={`/posts/${posts[0].slug}`} class="hero-main">
          <img src={posts[0].image.replace('w=600', 'w=900')} alt={posts[0].title} />
          <div class="overlay"></div>
          <div class="content">
            <span class="badge">NEW</span>
            <h2>{posts[0].title}</h2>
            <p>{posts[0].description}</p>
          </div>
        </a>
      )}
    </div>
  </section>

  <!-- Main Content -->
  <div class="main-wrapper">
    <main>
      <!-- Section Header -->
      <div class="section-header">
        <h2 class="section-title">Latest Recipes</h2>
        <a href="/posts">View All →</a>
      </div>

      <!-- Posts Grid -->
      <div class="posts-grid" id="posts-grid">
        {posts.map((post) => (
          <article class="post-card" data-category={post.category}>
            <a href={`/posts/${post.slug}`}>
              <div class="image">
                <img src={post.image} alt={post.title} loading="lazy" />
                <span class="badge">{post.category}</span>
              </div>
              <div class="content">
                <h3>{post.title}</h3>
                <p>{post.description}</p>
                <div class="meta">
                  <span>{post.date}</span>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </main>

    <!-- Sidebar -->
    <aside class="sidebar">
      <!-- Editor's Picks -->
      <div class="sidebar-section">
        <h4 class="section-header">Editor's Picks</h4>
        <div class="picks-list">
          {recommendedPosts.map((post, index) => (
            <a href={`/posts/${post.slug}`} class="picks-item">
              <span class="picks-number">{index + 1}</span>
              <img class="picks-thumb" src={post.image.replace('w=600', 'w=100')} alt={post.title} loading="lazy" />
              <div class="picks-content">
                <div class="picks-title">{post.title}</div>
                <div class="picks-category">{post.category}</div>
              </div>
            </a>
          ))}
        </div>
      </div>

    </aside>
  </div>

</BaseLayout>

<style>
  /* ==================== HERO ==================== */
  .hero {
    max-width: 1200px;
    margin: 0 auto;
    padding: 32px 24px;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1.8fr 1fr;
    gap: 24px;
  }

  .hero-single {
    display: block;
  }

  .hero-single .hero-main {
    height: 480px;
    max-width: 100%;
  }

  .hero-main {
    position: relative;
    border-radius: 0;
    overflow: hidden;
    height: 420px;
    display: block;
  }

  .hero-main img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-main .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.75) 0%, rgba(0,0,0,0.2) 40%, transparent 70%);
  }

  .hero-main .content {
    position: absolute;
    bottom: 32px;
    left: 32px;
    right: 32px;
    color: #fff;
  }

  .badge {
    display: inline-block;
    background: var(--accent);
    color: #fff;
    padding: 6px 14px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    margin-bottom: 14px;
  }

  .hero-main h2 {
    font-size: 1.7rem;
    font-weight: 700;
    line-height: 1.4;
    margin-bottom: 10px;
    letter-spacing: -0.02em;
  }

  .hero-main p {
    font-size: 0.95rem;
    opacity: 0.85;
    line-height: 1.6;
  }

  .hero-side {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .hero-side-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    flex: 1;
    display: block;
  }

  .hero-side-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-side-item .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 60%);
  }

  .hero-side-item .content {
    position: absolute;
    bottom: 18px;
    left: 18px;
    right: 18px;
    color: #fff;
  }

  .hero-side-item h3 {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.4;
  }

  /* ==================== MAIN WRAPPER ==================== */
  .main-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 48px 24px;
    display: grid;
    grid-template-columns: 1fr 340px;
    gap: 48px;
  }

  /* Section Header */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 28px;
  }

  .section-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .section-title::before {
    content: '';
    width: 4px;
    height: 20px;
    background: var(--accent);
    border-radius: 2px;
  }

  .section-header a {
    font-size: 0.85rem;
    color: var(--text-tertiary);
  }

  .section-header a:hover {
    color: var(--accent);
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .post-card {
    background: var(--bg-card);
    border-radius: 0;
    overflow: hidden;
    border: 1px solid #e0e0e0;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.08);
  }

  .post-card a {
    display: block;
  }

  .post-card .image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .post-card .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s;
  }

  .post-card:hover .image img {
    transform: scale(1.05);
  }

  .post-card .image .badge {
    position: absolute;
    top: 14px;
    left: 14px;
    background: var(--text-primary);
  }

  .post-card .content {
    padding: 22px;
  }

  .post-card h3 {
    font-size: 1.05rem;
    font-weight: 600;
    line-height: 1.5;
    margin-bottom: 10px;
    color: var(--text-primary);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 16px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    color: var(--text-tertiary);
  }

  .post-card .meta .stats {
    display: flex;
    gap: 12px;
  }

  /* ==================== SIDEBAR ==================== */
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .sidebar-section {
    background: var(--bg-card);
    padding: 24px;
    border: 1px solid var(--border);
  }

  .section-header {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 20px;
    padding-bottom: 12px;
    border-bottom: 2px solid var(--text-primary);
    letter-spacing: 0.02em;
  }

  /* Editor's Picks */
  .picks-list {
    display: flex;
    flex-direction: column;
  }

  .picks-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 0;
    border-bottom: 1px solid var(--border-light);
    text-decoration: none;
    color: inherit;
    transition: background 0.2s;
  }

  .picks-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .picks-item:first-child {
    padding-top: 0;
  }

  .picks-item:hover {
    background: var(--bg-secondary);
    margin: 0 -12px;
    padding-left: 12px;
    padding-right: 12px;
  }

  .picks-number {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: #CCCCCC;
    line-height: 1;
    min-width: 24px;
  }

  .picks-thumb {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 4px;
    flex-shrink: 0;
  }

  .picks-content {
    flex: 1;
    min-width: 0;
  }

  .picks-title {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-primary);
    line-height: 1.4;
    margin-bottom: 4px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .picks-category {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ==================== CTA SECTION ==================== */
  .cta-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px 64px;
  }

  .cta-box {
    background: linear-gradient(135deg, var(--text-primary) 0%, #3a3a3a 100%);
    border-radius: 20px;
    padding: 56px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .cta-box::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 400px;
    height: 400px;
    background: var(--accent);
    opacity: 0.1;
    border-radius: 50%;
  }

  .cta-content {
    position: relative;
    z-index: 1;
  }

  .cta-content h2 {
    font-size: 1.8rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 8px;
  }

  .cta-content p {
    font-size: 1rem;
    color: var(--text-tertiary);
  }

  .cta-button {
    position: relative;
    z-index: 1;
    background: var(--accent);
    color: #fff;
    border: none;
    padding: 18px 40px;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 10px;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(160, 128, 96, 0.4);
  }

  /* ==================== RESPONSIVE ==================== */
  @media (max-width: 1024px) {
    .main-wrapper {
      grid-template-columns: 1fr;
    }

    .sidebar {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }

    .hero-grid {
      grid-template-columns: 1fr;
    }

    .hero-main {
      height: 300px;
    }

    .hero-single .hero-main {
      height: 350px;
    }

    .hero-side {
      flex-direction: row;
    }

    .hero-side-item {
      height: 200px;
    }
  }

  @media (max-width: 768px) {
    /* 메인 히어로 - 강화된 그라데이션 (Option B) */
    .hero {
      padding: 0;
    }

    .hero-single .hero-main {
      height: 320px;
      border-radius: 0;
    }

    .hero-main .overlay {
      inset: auto 0 0 0; /* 하단에만 배치 */
      height: 60%;
      background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.5) 50%, transparent 100%);
    }

    .hero-main .content {
      bottom: 24px;
      left: 20px;
      right: 20px;
    }

    .hero-main .badge {
      font-size: 10px;
      padding: 5px 10px;
      margin-bottom: 10px;
    }

    .hero-main h2 {
      font-size: 20px;
      line-height: 1.4;
      margin-bottom: 0;
    }

    /* 모바일에서 설명 숨김 - 제목만 표시 */
    .hero-main p {
      display: none;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .sidebar {
      grid-template-columns: 1fr;
    }

    .hero-side {
      flex-direction: column;
    }

    .hero-side-item {
      height: 180px;
    }

    .cta-box {
      flex-direction: column;
      text-align: center;
      gap: 32px;
      padding: 40px 24px;
    }
  }
</style>
